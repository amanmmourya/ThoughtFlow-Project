    <div id="ejsuniqueid" style="display: none;">
        <%=ejsuniqueid%>
    </div>
    <div id="headerdiv">
        <div class="profilediv">
            <div class="headerdiv-item" id="myprofile"></div>
            <div id="myusername">
                <%=ejsusername %>
            </div>

        </div>
        <div id="formdiv1">
            <form action="/predark" method="post">
                <input id="dusernameinfo" type="text" value="<%=ejsusername%>" style="display: none;" name="usernameinfo"></input>
                <input id="duniqueidinfo" type="text" value="<%=ejsuniqueid%>" style="display: none;" name="uniqueidinfo"></input>
                <div class="headerdiv-item" id="switchmode">
                    <button class="mode-darkwindow" type="submit">Dark window</button>
                </div>
            </form>
            <form action="/prenetwork" method="post">
                <input id="nusernameinfo" type="textarea" style="display: none;" name="usernameinfo"></input>
                <input id="nuniqueidinfo" type="textarea" style="display: none;" name="uniqueidinfo"></input>
                <div class="headerdiv-item" id="switchmode">
                    <button class="mode-network" type="submit">Network</button>
                </div>
            </form>
        </div>
    </div>
    <div id="maindiv">
        <div class="maindiv-item" id="userwindow">
            <div class="searcharea">
                <input id="searchtext" placeholder="Search users worldwide through user id">

                </input>
                <div id="submitsearch">

                </div>
            </div>
            <div id="foundusers">

            </div>
        </div>
        <div class="maindiv-item" id="messagewindow">
            <div class="messagewindow-item" id="messagehead">
                <div id="usernamediv">

                </div>
                <div id="infodiv">

                </div>
            </div>
            <div class="messagewindow-item" id="messagecontent">
